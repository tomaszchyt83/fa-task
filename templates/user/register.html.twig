{% extends 'base.html.twig' %}

{% block body_id 'user_register' %}

{% block main %}
    <h1>{{ 'title.register_user'|trans }}</h1>

    <div class="alert alert-info" role="alert">{{ 'info.register_user'|trans }}</div>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.register_user'|trans }}
    </button>
    {{ form_end(form) }}
{% endblock %}